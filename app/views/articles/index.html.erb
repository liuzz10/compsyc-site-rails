<h1>Articles</h1>

<%= Article.public_count %> articles in total.


<ul>
    <% @articles.each do |article| %>
        <% unless article.archived? %>
            <li>
                <%= link_to article.title, article %>
            </li>
        <% end %>
    <% end %>
</ul>

<% if current_user && current_user.role == "admin" %>
    <%= link_to "New Article", new_article_path %>
<% end %>
